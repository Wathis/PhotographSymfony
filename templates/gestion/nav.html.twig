{% extends 'base.html.twig' %}

{% block navgerer %}
    <nav class=" nav-gerer">
        <div class="nav-content">
            <ul class="tabs tabs-transparent">
                {% set url_page = app.request.uri %}
                <li class="tab lienGerer"><a class="{{ 'album' in url_page ? 'activeTab' : '' }}" href="{{ path('gestion-site-albums') }}">MES ALBUMS</a></li>
                <li class="tab lienGerer"><a class="{{ 'prix' in url_page ? 'activeTab' : '' }}" href="{{ path('gestion-site-prix') }}">PRIX</a></li>
                <li class="tab lienGerer"><a class="{{ 'clients' in url_page ? 'activeTab' : '' }}" href="{{ path('gestion-site-clients') }}">CLIENTS</a></li>
                <li class="tab lienGerer"><a class="{{ 'achats' in url_page ? 'activeTab' : '' }}" href="{{ path('gestion-site-achats') }}">ACHATS</a></li>
                <li class="tab lienGerer"><a class="{{ 'presse' in url_page ? 'activeTab' : '' }}" href="{{ path('gestion-site-presse') }}">PRESSE</a></li>
                <li class="tab lienGerer"><a class="{{ 'carousel' in url_page ? 'activeTab' : '' }}" href="{{ path('gestion-site-carousel') }}">CAROUSEL</a></li>
                <li class="tab lienGerer"><a class="{{ 'profil' in url_page ? 'activeTab' : '' }}" href="{{ path('gestion-site-profil') }}">PROFIL</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">{{ flashMessage }}</div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ flashMessage }}</div>
        {% endfor %}
    </div>
{% endblock %}

{% block body %}
{% endblock %}