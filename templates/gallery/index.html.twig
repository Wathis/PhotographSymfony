{% extends 'base.html.twig' %}

{% block title %}Galerie - {{ category }}{% endblock %}

{% block body %}

    <div class="gallery">

        <div class="header">
            <h3 class="center-align">GALERIE DE PHOTOS</h3>

            <div class="separatorLine"></div>

            <h5 class="center-align">
                {{ 'SECTION POUR ' ~  category | upper ~ 'S' }}
            </h5>

            <div class="sort center-align">
                <div class="sortBy">Trier par</div>
                <input class="browser-default inputDate" type="date" />
            </div>
        </div>

        <div class="albums">

            <div class="album">
                <a href="{{ path('viewer',{'albumId' : 2,'category' : category,'photoId' : 2}) }}">Viewer</a>
            </div>

        </div>


    </div>



{% endblock %}
