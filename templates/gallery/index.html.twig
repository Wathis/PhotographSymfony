{% extends 'base.html.twig' %}

{% block title %}Galerie - {{ category }}{% endblock %}

{% block body %}

    <div class="gallery">

        <div class="header">
            <h3 class="center-align">GALERIE DE PHOTOS</h3>

            <div class="separatorLine"></div>

            <h5 class="center-align">
                {{ 'SECTION POUR ' ~  category | upper ~ 'S' }}
            </h5>

            <div class="sort center-align">
                <div class="sortBy">Trier par</div>
                <input class="browser-default inputDate" type="date" />
            </div>
        </div>

        <div class="container">

            <div class="album">

                <div class="tile">
                    <img src="{{ asset('img/c1.png') }}" alt="">
                </div>
                <div class="tile">
                    <img src="{{ asset('img/c2.png') }}" alt="">
                </div>
                <div class="tile">
                    <img src="{{ asset('img/c3.png') }}" alt="">
                </div>
                <div class="tile">
                    <img src="{{ asset('img/c4.png') }}" alt="">
                </div>
                <div class="tile">
                    <img src="{{ asset('img/c5.png') }}" alt="">
                </div>
                {#<div class="album">#}
                {#<a href="{{ path('viewer',{'albumId' : 2,'category' : category,'photoId' : 2}) }}">Viewer</a>#}
                {#</div>#}

            </div>
        </div>


    </div>



{% endblock %}
